<Application x:Class="CatPhotoTidyTool.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CatPhotoTidyTool"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>
        <!-- Default Control Style -->
        <Style x:Key="DefaultControlStyle">
            <Setter Property="Control.Background" Value="#EEEEEE" />
            <Setter Property="Control.FontSize" Value="14" />
            <Setter Property="Control.FontFamily" Value="Microsoft JhengHei UI" />
            <Setter Property="ItemsControl.Margin" Value="3" />
        </Style>
        <Style x:Key="StatusControlStyle" BasedOn="{StaticResource DefaultControlStyle}">
            <Setter Property="Control.FontSize" Value="12" />
            <Setter Property="ItemsControl.Margin" Value="0" />
        </Style>
        <!-- Button -->
        <Style x:Key="ExecuteButtonStyle" BasedOn="{StaticResource DefaultControlStyle}" TargetType="Button">
            <Setter Property="Background" Value="#006BFF" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#091057" />
        </Style>
    </Application.Resources>
</Application>
