    <UseWPF>true</UseWPF>
    <ApplicationIcon>Resource\appicon.ico</ApplicationIcon>
    <Version>0.0.1</Version>
    <UseWindowsForms>True</UseWindowsForms>
    <Authors>TsaiXO</Authors>
    <Company>minexo79@gmail.com</Company>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resource\about.svg" />
    <None Remove="Resource\write.svg" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Resource\appicon.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.3.2" />
    <PackageReference Include="SharpVectors.Wpf" Version="1.8.4.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\TidyCore\TidyCore.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resource\about.svg" />
    <Resource Include="Resource\write.svg" />
  </ItemGroup>

  <ItemGroup>
    <None Update="README.txt">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
